<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="text-center"><img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="img-circle"><br>Login</h2>
        </div>
        <div class="modal-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form col-md-12 center-block") do |f| %>
              <div class="form-group">
                <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control input-md" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control input-md" %>
              </div>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
              <div class="form-group">
                <%= f.submit "Log in", class: "btn btn-primary btn-md btn-block"%>
                <%# <span class="pull-right"><a href="#">Register</a></span><span><a href="#">Need help?</a></span> %>
                <%= render "users/shared/links" %>
              </div>
            <% end %>
        </div>
        <div class="modal-footer">
            <div class="col-md-12">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
          </div>	
        </div>
    </div>
  </div>
</div>
