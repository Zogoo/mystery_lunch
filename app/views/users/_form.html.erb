    <%= form.label :department %><br />
    <%= form.text_field :department, autofocus: true, autocomplete: "department" %>
  </div>

  <div class="field">
    <%= form.label :first_name %><br />
    <%= form.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= form.label :last_name %><br />
    <%= form.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
