<div class="container mt-3 mb-4">
  <p id="notice"><%= notice %></p>

  <div>Users
    <%=
        link_to_if(current_user.nil?, "Login", new_user_session_path, class: 'btn btn-info btn-sm') do
            link_to('Sign out',  destroy_user_session_path, :method => 'delete', class: 'btn btn-primary')
        end
    %>
  </div>
  <div class="col-lg-9 mt-4 mt-lg-0">
    <div class="row">
      <div class="col-md-12">
        <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm">
          <table class="table manage-candidates-top mb-0">
            <thead>
              <tr>
                <th>User Name</th>
                <th class="text-center">Status</th>
                <th class="action text-right">Action</th>
              </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
              <tr class="candidates-list">
                <td class="title">
                  <div class="thumb">
                    <img class="img-fluid" src="<%=user.photo%>" alt="">
                  </div>
                  <div class="candidate-list-details">
                    <div class="candidate-list-info">
                      <div class="candidate-list-title">
                        <h5 class="mb-0">
                          <%= link_to user do %>
                            <%= user.full_name %><br />
                          <% end %>
                        </h5>
                      </div>
                      <div class="candidate-list-option">
                        <ul class="list-unstyled">
                          <li><i class="fas fa-filter pr-1"></i><%= user.department %></li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="candidate-list-favourite-time text-center">
                  <span class="candidate-list-time order-1"><%= user.status %></span>
                </td>
                <td>
                  <ul class="list-unstyled mb-0 d-flex justify-content-end">
                    <li>
                        <%= link_to user do %>
                          <i class="far fa-eye"></i>
                        <% end %>
                    </li>
                    <li>
                      <%= link_to edit_user_path(user) do %>
                        <i class="fas fa-pencil-alt"></i>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="far fa-trash-alt"></i>
                      <% end %>
                    </li>
                  </ul>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <div class="text-center mt-3 mt-sm-3">
            <%= paginate @users %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to 'New User', new_admin_user_path %>