<div class="container-xl px-4 mt-4">
  <p id="notice"><%= notice %></p>
  <%= link_to 'Edit', edit_admin_user_path(@user) %> |
  <%= link_to 'Back', admin_users_path %>
  <!-- Account page navigation-->
  <nav class="nav nav-borders">
      <a class="nav-link active ms-0" href="#" target="__blank">Profile</a>
  </nav>
  <hr class="mt-0 mb-4">
  <%= form_with(model: @user) do |form| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
              <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
              <% end %>
          </ul>
          </div>
      <% end %>
      <div class="row">
          <div class="col-xl-4">
              <!-- Profile picture card-->
              <div class="card mb-4 mb-xl-0">
                  <div class="card-header">Profile Picture</div>
                  <div class="card-body text-center">
                      <!-- Profile picture image-->
                      <img class="img-account-profile rounded-circle mb-2" src="<%= @user.photo %>" alt="">
                  </div>
              </div>
          </div>
          <div class="col-xl-8">
              <!-- Account details card-->
              <div class="card mb-4">
                  <div class="card-header">Account Details</div>
                  <div class="card-body">
                          <!-- Form Group (username)-->
                          <div class="mb-3">
                              <%= form.label :username, class: "small mb-1" %>
                              <%= form.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", disabled: true %>
                          </div>
                          <!-- Form Row-->
                          <div class="row gx-3 mb-3">
                              <!-- Form Group (first name)-->
                              <div class="col-md-6">
                                  <%= form.label :first_name, class: "small mb-1" %><br />
                                  <%= form.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", disabled: true %>
                              </div>
                              <!-- Form Group (last name)-->
                              <div class="col-md-6">
                                  <%= form.label :last_name, class: "small mb-1" %><br />
                                  <%= form.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", disabled: true %>
                              </div>
                          </div>
                          <!-- Form Row        -->
                          <div class="row gx-3 mb-3">
                              <!-- Form Group (organization name)-->
                              <div class="col-md-6">
                                  <%= form.label :department, class: "small mb-1" %><br />
                                  <%= form.text_field :department, autofocus: true, autocomplete: "department", class: "form-control" , disabled: true%>
                              </div>
                          </div>
                          <!-- Form Group (email address)-->
                          <div class="mb-3">
                              <%= form.label :email, class: "small mb-1" %>
                              <%= form.email_field :email, autocomplete: "email", class: "form-control", disabled: true %>
                          </div>
                  </div>
              </div>
          </div>
      </div>
  <% end %>
</div>